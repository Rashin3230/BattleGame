@page "/army"
@inject IUnitService UnitService

<h3>Army</h3>

<table class="table">
    @foreach (var userUnit in UnitService.MyUnits)
    {


<tr>
    <td>
        @switch (userUnit.UnitId)
        {
            case 1:<img src="icons/knight.png" alt="Knight" />break;
            case 2: <img src="icons/archer.png" alt="Archer" />break;
            case 3: <img src="icons/mage.png" alt="Mage" />break;
        }
    </td>
    <td>
        @UnitService.Units.First(unit => unit.Id == userUnit.UnitId).Title
    </td>
    <td>
        @userUnit.HitPoints HP
    </td>
</tr>
    }
</table>

